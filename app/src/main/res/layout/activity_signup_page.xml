<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mhiker"
    tools:context=".SignupPageActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/assistant_extralight"
        android:text="Ready to explore?"
        android:textColor="#F3EBEB"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/spemailaddress"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:background="#80FFFFFF"
        android:cursorVisible="true"
        android:ems="10"
        android:fontFamily="@font/assistant_extralight"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textColorHint="#CC56656C"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/spfullname" />

    <EditText
        android:id="@+id/spfullname"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:background="#80FFFFFF"
        android:cursorVisible="true"
        android:ems="10"
        android:fontFamily="@font/assistant_extralight"
        android:hint="Enter Full Name"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColorHint="#CC56656C"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/sppassword"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:background="#80FFFFFF"
        android:ems="10"
        android:fontFamily="@font/assistant_extralight"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textColorHint="#CC56656C"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/spemailaddress" />

    <EditText
        android:id="@+id/sprepassword"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:background="#80FFFFFF"
        android:ems="10"
        android:fontFamily="@font/assistant_extralight"
        android:hint="Re-enter your password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textColorHint="#CC56656C"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/sppassword" />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#992B2D3A"
        android:backgroundTintMode="src_in"
        android:cursorVisible="true"
        android:shadowColor="#555050"
        android:text="Sign Up"
        android:textColor="#EAE3E3"
        android:textSize="16sp"


        app:cornerRadius="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sprepassword" />
</androidx.constraintlayout.widget.ConstraintLayout>